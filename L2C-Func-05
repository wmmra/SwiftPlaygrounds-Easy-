/* Solve the short cross*/
func shortCross() {
    for i in 1 ... 2 {
        moveForward()
        moveForward()
        toggleSwitch()
        turnLeft()
        turnLeft()
        moveForward()
        moveForward()
    }
}
/* Solve the long cross */

func longCross() {
    for i in 1 ... 2 {
        for i in 1 ... 2 {
            moveForward()
            moveForward()
            toggleSwitch()
        }
        turnLeft()
        turnLeft()
        for i in 1 ... 4 {
            moveForward()
        }
    }
}
/* Main Program Loop */
shortCross()
turnLeft()
longCross()
